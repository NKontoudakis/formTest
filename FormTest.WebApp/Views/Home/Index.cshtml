@{
    ViewData["Title"] = "Home Page";
}

@* Custom Styles for this page only *@
<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        margin-bottom: 3rem;
    }
    .feature-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 10px;
    }
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .icon-box {
        font-size: 2rem;
        color: #764ba2;
        margin-bottom: 1rem;
    }
</style>

<div class="hero-section text-center">
    <h1 class="display-4 fw-bold">FormTest Application</h1>
    <p class="lead mb-4">A secure, enterprise-grade form management system built on .NET 9.</p>
    
    @if (User.Identity.IsAuthenticated)
    {
        <p class="fs-5">Welcome back, <strong>@User.Identity.Name</strong>!</p>
        <a href="/ApplicationForm" class="btn btn-light btn-lg fw-bold px-5 shadow-sm">
            🚀 Access Dashboard
        </a>
    }
    else
    {
        <p>Please log in to manage applications.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Identity/Account/Login" class="btn btn-light btn-lg fw-bold px-4">Log In</a>
            <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg px-4">Register</a>
        </div>
    }
</div>

<div class="container">
    <div class="row g-4">
        
        <div class="col-md-4">
            <div class="card feature-card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box">🛡️</div>
                    <h5 class="card-title fw-bold">Secure Access</h5>
                    <p class="card-text text-muted">
                        Built with ASP.NET Core Identity. Dedicated roles for <strong>Admins</strong> (Full Control) and <strong>Viewers</strong> (Read-Only).
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card feature-card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box">💾</div>
                    <h5 class="card-title fw-bold">SQL Persistence</h5>
                    <p class="card-text text-muted">
                        All data is safely stored in Microsoft SQL Server using Entity Framework Core with automatic migrations.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card feature-card h-100 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="icon-box">⚡</div>
                    <h5 class="card-title fw-bold">Fast Management</h5>
                    <p class="card-text text-muted">
                        Create, Edit, and View applications instantly. Optimized with server-side pagination for speed.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="text-center mt-5 text-muted">
    <small>Powered by ASP.NET Core MVC & Bootstrap 5</small>
</div>