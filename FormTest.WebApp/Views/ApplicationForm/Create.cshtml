@model FormTest.DataAccess.Models.ApplicationForm
@using FormTest.Services.Enums

@{
    ViewData["Title"] = "Create Application";
}

<h2>Create New Application</h2>

<div class="row">
    <div class="col-md-6">
        @* The form points to the "Create" action in the Controller *@
        <form asp-action="Create">
            
            @* 1. Text Box *@
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                @* This span shows error messages (like "Title is required") *@
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* 2. Text Area *@
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                @* Using <textarea> instead of <input> gives a multi-line box *@
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* 3. Radio Group *@
            <div class="form-group mb-3">
                <label class="control-label">Priority Choice</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="RadioChoice" value="1" id="radio1" />
                        <label class="form-check-label" for="radio1">Option A</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="RadioChoice" value="2" id="radio2" />
                        <label class="form-check-label" for="radio2">Option B</label>
                    </div>
                </div>
            </div>

            @* 4. Check Box *@
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsConfirmed" /> @Html.DisplayNameFor(model => model.IsConfirmed)
                </label>
            </div>

            @* 5. Select Dropdown (Using the Enum!) *@
            <div class="form-group mb-3">
                <label asp-for="SelectDropdown" class="control-label">Category</label>
                <select asp-for="SelectDropdown" class="form-control" 
                        asp-items="Html.GetEnumSelectList<CategoryType>()">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="SelectDropdown" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>